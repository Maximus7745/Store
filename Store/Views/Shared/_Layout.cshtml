


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Store</title>
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Store.styles.css" asp-append-version="true" />-->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/product.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/authorization.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="main-nav">
            <p class="logo">
                <img src="/images/logo.svg" width="64" height="68" alt="Логотип магазина">
            </p>
            <div class="search">
                <div class="search-field">
                    <input type="search" class="search-input" name="search" />
                    <input type="image" class="image-search" src="/images/search.svg" alt="Поиск" width="35" height="35">
                    @* <button class="image-button-search"></button> *@
                </div>
            </div>
            <div class="users-block">
                <div class="signin">
                    <a asp-controller="User">
                        <img src="/images/avatar.svg" width="40" height="40" alt="Зарегистрироваться">
                    </a>
                    <a asp-controller="User">@(Context.User.Identity.Name ?? "Войти")</a>
                </div>
                <div class="basket">
                    <a asp-action="Index" asp-controller="Cart">
                        <img src="/images/cart.svg" width="40" height="40" alt="Корзина">
                    </a>
                    <a asp-controller="User">Корзина</a>
                </div>
            </div>
        </nav>
    </header>
@*     <div id="categories" class="col-3">
        @await Component.InvokeAsync("NavigationMenu")
    </div> *@
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="main-footer">
        <div class="footer-container">
            <div class="footer-column">
                <p class="logo">
                    <img src="/images/logo.svg" width="100" height="100" alt="Логотип магазина">
                </p>
                <p class="copyright"><a href="#">Store ©2024 Все права защищены</a></p>
            </div>
            <ul class="footer-navigation-topics">
                <li class="footer-navigation-topic">
                    <h2>Компания</h2>
                    <ul class="footer-navigation">
                        <li class="footer-navigation-item">
                            <a href="#">О нас</a>
                        </li>
                        <li class="footer-navigation-item">
                            <a href="#">Контакты</a>
                        </li>
                        <li class="footer-navigation-item">
                            <a href="#">Новости</a>
                        </li>
                        <li class="footer-navigation-item">
                            <a href="#">Блог</a>
                        </li>
                    </ul>
                </li>
                <li class="footer-navigation-topic">
                    <h2>Покупателям</h2>
                    <ul class="footer-navigation">
                        <li class="footer-navigation-item">
                            <a href="#">Правила</a>
                        </li>
                        <li class="footer-navigation-item">
                            <a href="#">Задать вопрос</a>
                        </li>
                        <li class="footer-navigation-item">
                            <a href="#">FAQ</a>
                        </li>
                        <li class="footer-navigation-item">
                            <a href="#">Партнеры</a>
                        </li>
                    </ul>
                </li>
                <li class="footer-navigation-topic">
                    <h2>Мы в соцсетях</h2>
                    <ul class="footer-navigation">
                        <li class="footer-navigation-item">
                            <a href="#">Telegram</a>
                        </li>
                        <li class="footer-navigation-item">
                            <a href="#">WhatsApp</a>
                        </li>
                        <li class="footer-navigation-item">
                            <a href="#">Вконтакте</a>
                        </li>
                        <li class="footer-navigation-item">
                            <a href="#">Facebook</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </footer>
@*     <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script> *@

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
