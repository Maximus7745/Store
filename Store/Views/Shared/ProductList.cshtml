@model Product<li class="product-card">    <img class="img-card" src="@Model.ImageUrl" alt="@Model.Name" asp-append-version="true" width="110" height="110" />    <div class="text-card">        <h2 class="title-card">@Model.Name</h2>        <div class="price-block">            <div class="price-card">@((int)Model.Price) $</div>            <form id="@Model.Id" asp-action="SelectProduct" asp-controller="Home" method="post">                <input type="hidden" asp-for="Id" name="productId" value="@Model.Id" />                <input type="hidden" name="returnUrl" value="@(ViewContext.HttpContext.Request.Path + ViewContext.HttpContext.Request.QueryString)" />                <button type="submit" class="button-card">                    Купить                </button>            </form>        </div>
    </div></li>